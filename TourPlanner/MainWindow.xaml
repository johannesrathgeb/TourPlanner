            <Button Grid.Row="0" Grid.Column="2" Content="Clear" Background="LightGray" Foreground="Black" Command="{Binding ClearSearchedToursCommand}"/>!-->
        
        <ContentControl Grid.Row="1" 
                        Grid.Column="1" 
                        Grid.RowSpan="3"
                        Margin="10,10,10,10"
                        Content="{Binding CurrentView}"/>
        

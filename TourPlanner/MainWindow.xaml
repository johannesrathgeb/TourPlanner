<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        Title="Tour Planner" 
        Height="600" Width="920"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="CanResize"  
        Background="Transparent"
        AllowsTransparency="False">

    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>

    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="473*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="TourPlanner"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="22"
                   Margin="20,0,0,0"/>

        <StackPanel Grid.Row="1" Grid.RowSpan="2">
            <TextBox Width="Auto"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="20,0,0,0"
                     Style="{StaticResource ModernTextBox}"/>

            <ListBox Background="#272537" BorderThickness="0" SelectedIndex="{Binding SelectedIndex}" ItemsSource="{Binding Tours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                <ListBox.ItemTemplate>
                    <!--Style="{StaticResource ListBoxItemStyle}"-->
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"
                                Height="25"
                                Foreground="White"
                                FontSize="14"
                                Margin="20,10,0,0"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Height="50">
            <Button Content="Add"
                        Background="#38354f"
                        Foreground="White"
                        FontSize="16"
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="50"
                        Margin="10,0,0,10"
                        Padding="10"
                        Command="{Binding OpenDialogCommand}"/>
            <Button Content="Delete"
                        Background="#38354f"
                        Foreground="White"
                        FontSize="16"
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="50"
                        Margin="10,0,10,10"
                        Padding="10"
                        Command="{Binding DeleteTourCommand}"/>
            <Button Content="Edit"
                        Background="#38354f"
                        Foreground="White"
                        FontSize="16"
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="50"
                        Margin="0,0,10,10"
                        Padding="10"
                        Command="{Binding OpenEditDialogCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Button Style="{StaticResource RoundedButtonStyle}"         Content="Import Tours"
                        Background="#38354f"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        Margin="10"
                        Padding="10"
                        Command="{Binding ImportToursCommand}"/>
            <Button Style="{StaticResource RoundedButtonStyle}"         Content="Export Tours"
                        Background="#38354f"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        Margin="10"
                        Padding="10"
                        Command="{Binding ExportToursCommand}"/>
            <Button Style="{StaticResource RoundedButtonStyle}"         Content="Tour PDF"
                        Background="#38354f"
                        Foreground="White"
                        FontSize="18"
                        Margin="10"
                        Padding="10"
                        Command="{Binding GenerateTourPDFCommand}"/>
            <Button Style="{StaticResource RoundedButtonStyle}"         Content="Summarized PDF"
                        Background="#38354f"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        Margin="10"
                        Padding="10"
                        Command="{Binding GenerateSummarizePDFCommand}"/>
        </StackPanel>



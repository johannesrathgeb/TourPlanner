<Window x:Class="TourPlanner.CreationDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.ViewModels"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=txtName}"
        mc:Ignorable="d"
        Title="CreationDialogue" Height="450" Width="800">

    <Window.DataContext>
        <local:CreationDialogVM/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        
        <TextBox Text="{Binding NewTour.Name}" Name="txtName" Grid.Row="0" Grid.Column="0"/>
        <TextBox Grid.Row="0" Grid.Column="1"/>
        <Button Name="okButton" Command="{Binding OkCommand}" IsDefault="True" Grid.Row="2" Grid.Column="0">OK</Button>
        <Button Name="cancelButton" Command="{Binding CancelCommand}" IsCancel="True" Grid.Row="2" Grid.Column="1">Cancel</Button>
    </Grid>
</Window>
